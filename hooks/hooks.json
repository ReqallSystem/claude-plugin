{
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node dist/hooks/setup.mjs",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "node dist/hooks/context.mjs",
            "timeout": 60
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node dist/hooks/classify.mjs",
            "timeout": 120
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "Plan",
        "hooks": [
          {
            "type": "command",
            "command": "node dist/hooks/plan.mjs",
            "timeout": 120
          }
        ]
      }
    ]
  }
}
